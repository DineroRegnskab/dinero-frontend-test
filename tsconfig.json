{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es2015",
      "es2016",
      "dom"
    ],
    "baseUrl": "./src",
    "paths": {
      "@dinero/common/*": ["app/common/*"],
      "@dinero/browser/*": ["app/browser/*"],
      "@dinero/components/*": ["app/components/*"],
      "@dinero/pages/*": ["app/pages/*"],
      "@environment/*": ["environments/*"],
      "@animations/*": ["content/animations/*"]
    }
  }
}
